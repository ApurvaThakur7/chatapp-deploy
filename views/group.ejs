<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Group</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.6.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
            text-align: center;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .form-container {
            display: none;
            margin-top: 20px;
            opacity: 0;
            transition: all 0.3s ease;
        }

        .form-container.show {
            display: block;
            opacity: 1;
        }

        input[type="text"],
        input[type="file"],
        input[type="number"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .table-bordered {
            border-collapse: separate;
            border-spacing: 0.5em;
        }

        .table-bordered th, .table-bordered td {
            border: 1px solid #dee2e6;
            padding: 0.75em;
        }
    </style>
</head>
<body>

<div class="container">
    <!-- Button to reveal form -->
    <button type="button" class="btn btn-primary" onclick="showForm()">
        Create Group
    </button>

    <!-- Form Container -->
    <div class="form-container" id="groupForm">
        <!-- Your form goes here -->
        <form action="/groups" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Group Name:</label>
                <input type="text" id="name" name="name" placeholder="Enter Group Name" required>
            </div>
            <div class="form-group">
                <label for="memberLimit">Member Limit:</label>
                <input type="number" id="memberLimit" name="memberLimit" placeholder="Enter Member Limit" required>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-secondary" onclick="hideForm()">Close</button>
                <button type="submit" class="btn btn-primary">Create Group</button>
            </div>
        </form>

        <% if (typeof message !== 'undefined') { %>
            <div class="alert alert-success" role="alert">
                <%= message %>
            </div>
        <% } %>
    </div>

    <table class="table mt-4 table-bordered">
        <thead>
            <tr>
                <th>S.No</th>
                <th>Name</th>
                <th>Limit</th>
                <th>Members</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if(groups && groups.length > 0) { %>
                <% groups.forEach((group, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= group.name %></td>
                        <td><%= group.limit %></td>
                        <td>
                            <!-- <a class="cursor-pointer addMember"  data-toggle="modal" data-target="#memberModal" >Members</a> -->
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                                Launch demo modal
                              </button>                        </td>
                        <td>
                            <!-- Add actions buttons here, e.g., edit, delete -->
                            <button class="btn btn-info">Edit</button>
                            <button class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5">
                        <div class="text-center text-muted">
                            <p class="mb-0">No Groups Found</p>
                            <p class="font-italic">Create a new group to get started!</p>
                        </div>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        Launch demo modal
    </button>

    <!-- member Modal -->
    <div class="modal fade" id="memberModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Members</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="" id="add-member-form"></form>
                <div class="modal-body">
                    <input type=" hidden" name="group_id" id="group_id">
                    <input type=" hidden" name="limit" id="limit">

                    <table class="table">
                        <thead>
                            <tr>
                                <th> Select </th>
                                <th>Name</th> 
                            </tr>
                        </thead>

                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </form>
            </div>
        </div>
    </div>

</div>

<!-- Bootstrap JS (Popper.js and Bootstrap JS are not needed for this example) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.6.0/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A5nt2lwKQF7ABFie+EnZ4MWfM5gndFdUmr6O8dP+4IaL6" crossorigin="anonymous"></script>

<!-- Custom JavaScript -->
<script>
    function showForm() {
        document.getElementById('groupForm').classList.add('show');
    }

    function hideForm() {
        document.getElementById('groupForm').classList.remove('show');
    }

    function openMemberModal() {
        $('#memberModal').modal('show');
    }
</script>

</body>
</html>

